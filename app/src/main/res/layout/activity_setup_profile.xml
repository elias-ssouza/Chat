<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    tools:context=".SetupProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:src="@mipmap/user_avatar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informação do perfil"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold|normal"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Digite seu nome e escolha uma foto de perfil"
        android:textAlignment="center"
        android:textStyle="bold|normal"
        android:textSize="12sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/et_insert_name"
                android:layout_width="337dp"
                android:layout_height="66dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/background_shape"
                android:ems="1"
                android:hint="Digite seu nome"
                android:inputType="phone"
                android:padding="10dp"
                android:textSize="20dp"
                android:textStyle="bold|normal"/>

            <Button
                android:id="@+id/bt_confirm_profile"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:text="Confirmar"
                android:textSize="16dp"
                android:backgroundTint="@color/purple_700"
                android:textStyle="bold|normal"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>